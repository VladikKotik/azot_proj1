@using azot_proj1.Models
@model List<QueryResultModel>

@{ Layout = null; }

<div>

    @using System.Web.Optimization
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")

    <table border="1" >
        <tr>
            <th>id нарушения</th>
            <th>Название цеха</th>
            <th>Датчик</th>
            <th>Зафиксированное значение</th>
            <th>Время нарушения</th>
            <th>подробнее</th>
        </tr>
        @foreach (azot_proj1.Models.QueryResultModel d in Model)
        {

        <tr>
            <td> @d.warn_id</td>
            <td>  @d.workshop_name</td>
            <td>@d.sensor_name</td>
            <td>@d.dangerous_value</td>
            <td>@d.warning_time</td>

            <td>@Ajax.ActionLink(linkText: "details", actionName: "SensorsDetails", routeValues: new { in_id = d.warn_id }, ajaxOptions: new AjaxOptions { UpdateTargetId = "sensor_results" })</td>

        </tr>}

    </table>
    <table border="0">
        <tr><td><div id="sensor_results"></div></td></tr>
        </table>
</div>

