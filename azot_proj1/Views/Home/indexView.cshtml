@using azot_proj1
@model azot_db1Entities


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body> 
    <div>

        @using System.Web.Optimization
        @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
        @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")

        <table border="1">
            <tr>
                <th>id цеха</th>
                <th>Название цеха</th>
                <th>подробнее</th>
            </tr>
                @foreach (azot_proj1.workshop w in Model.workshop.ToList())
        {

        <tr>
            <td> @w.id</td>
            <td>  @w.name</td>
            <td>@Ajax.ActionLink(linkText: "info", actionName: "WarningsOfWorkshop", routeValues: new { in_id = w.id }, ajaxOptions: new AjaxOptions { UpdateTargetId = "results" })</td>
        </tr>
 }

            </table>

        <table border="0" >
            <tr><td><div id="results"></div></td></tr>
        </table>
    </div>
</body>
</html>